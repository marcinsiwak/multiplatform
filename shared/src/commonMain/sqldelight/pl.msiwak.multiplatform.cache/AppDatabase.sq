import kotlin.collections.List;
import pl.msiwak.multiplatform.data.common.ResultData;

CREATE TABLE Summary (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    exerciseTitle    TEXT NOT NULL,
    results     TEXT AS List<ResultData>    NOT NULL
);

updateSummary:
INSERT OR REPLACE INTO Summary(id, exerciseTitle, results)
VALUES (?, ?,?);

insertSummary:
INSERT INTO Summary(exerciseTitle, results)
VALUES (?,?);

removeAllSummaries:
DELETE FROM Summary;

removeSummary:
DELETE FROM Summary
WHERE id = ?;

selectFromSummary:
SELECT * FROM Summary
WHERE id = ?;

selectAllFromSummary:
SELECT * FROM Summary;